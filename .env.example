# GPU Statistics Server Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info
ACCESS_LOG=true
WORKERS=1

# FastAPI Configuration
TITLE=GPU Statistics Server
DESCRIPTION=A server that provides GPU statistics including memory usage and utilization
VERSION=1.0.0
DOCS_URL=/docs
REDOC_URL=/redoc

# Monitoring Configuration
REFRESH_INTERVAL=1.0
MAX_HISTORY=100

# API Configuration
ENABLE_CORS=true
API_PREFIX=

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
